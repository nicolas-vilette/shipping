<p id="notice"><%= notice %></p>

<table class="table schedule-table">
  <thead>
    <tr>
      <th scope="col">Schedules</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @schedules_ordered_by_current_day.each do |schedule| %>
      <tr>
        <% if schedule.shop_status %>
          <td></td>
          <td class="text-center"><%= t(integer_day_to_string(schedule.weekday)) %></td>
          <td class="text-center"><%= schedules_form(schedule.morning_opens_at, schedule.morning_closes_at) %></td>
          <td class="text-center"><%= schedules_form(schedule.afternoon_opens_at, schedule.afternoon_closes_at) %></td>
        <% else %>
          <td></td>
          <td class="text-center"><%= t(integer_day_to_string(schedule.weekday)) %></td>
          <td class="text-center"><span><%= t('Closed') %></span></td>
          <td></td>
        <% end %>
      </tr>
    <% end %>

  </tbody>
</table>



